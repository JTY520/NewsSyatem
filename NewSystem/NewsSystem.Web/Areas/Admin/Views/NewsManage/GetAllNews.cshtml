@model  IEnumerable<NewsSystem.Web.Areas.Admin.Models.NewsViewModel>


@{
    ViewBag.Title = "GetAllNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/news.css" rel="stylesheet" />
<div class="getnews">
    <script src="~/Scripts/table.js"></script>
    <div class="getnew">
        <strong>所有新闻</strong>
        <div class="add-icon"><a href="/Admin/NewsManage/WriteNews">添加新闻</a></div>
    </div>
    <hr />
    <form>
        <table id="example" class="getnews">
            <thead class="one-get-th">
                <tr>
                    @*<th>选择</th>*@
                    <th>标题</th>
                    <th>作者</th>
                    <th>类型</th>
                    <th>类型</th>
                    <th>是否发布</th>
                    <th>修改</th>
                    <th>操作</th>
                </tr>
            </thead>
            @if (Model.Count() != 0)
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>
                                <input type="checkbox" name="Ckeched" group="check" value="@item.Id" onchange="update()" />
                            </td>*@
                            <td><a href="/Admin/NewsManage/GetOneNews?id=@item.Id">@item.Title</a></td>
                            <td>@item.Writer</td>
                            <td>@item.FirstType</td>
                            <td>@item.SecondType</td>
                            @if (item.IsPublish == false)
                    {
                                <td>未上传</td>
                                <td>
                                    <a href="/Admin/NewsManage/NewsUpdate?id=@item.Id">发布</a>
                                </td>
                            }
                            else
                            {
                                <td>已上传</td>
                                <td>
                                    <a href="/Admin/NewsManage/NewsBackOut?id=@item.Id">撤销</a>
                                </td>
                            }
                            <td>
                                <a href="/Admin/NewsManage/NewsUpdate?id=@item.Id">编辑</a>
                                <a href="/Admin/NewsManage/NewsDelete?id=@item.Id" onclick="javaScript:alert('您确定要删除吗？');" >删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
                @*<tfoot>
                    <tr>
                        <td>
                            <button type="submit">全部删除</button>
                        </td>
                        <td>
                            <button type="submit">全部发布</button>
                        </td>
                        <td>
                            <button type="submit">全部撤销</button>

                        </td>
                    </tr>
                </tfoot>*@
            }
            else
            {
                <tbody>暂无数据</tbody>
            }
        </table>
        }
    </form>
     
</div>